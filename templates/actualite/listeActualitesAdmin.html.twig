{% extends 'admin_user/index.html.twig' %}



   {% block pageTitle %}Liste des Actualités{% endblock %}
   {% block body %}
  <table class="table table-hover">
    <thead>
    <tr>
      <th>Titre</th>
      <th>Contenu</th>
      <th>Image</th>
      <th>Modifier actualité<th>
      <th>Mettre en avant l'actualité</th>
      <th></th> 
    </tr>
  {% for actua in actualite %}
   
    <tr>
      <td> {{ actua.titre }}</td>
      <td>{{ actua.contenu | raw }}</td>
      <td><img style="width:150px;height=150px;" src="{{asset('uploads/image/'~actua.image ) }}"</td>
      <td><a class='lien_perso' href= {{ path('editactu', {'id':actua.id}) }} >Modifier Actualite</td>
      <td><a class='lien_perso' href= {{ path('deleteActu', {'id':actua.id}) }} onclick="return confirm('Etes vous sûre de vouloir supprimer cette actualité ?');">supprimer cette Actualité</a></td>
      <td><a class='lien_perso' {% if actua.ActuMisEnAvant == 1 %}style="color:#18391E;font-weight:bold;"{% endif %} href= {{ path('avant', {'id':actua.id}) }} onclick="return confirm('Etes vous sûre de vouloir mettre en avant cette actualité ?');"> Mettre en avant</td>

    </tr>
  {% endfor %}
</table>

{% endblock %}