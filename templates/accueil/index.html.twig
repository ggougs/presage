{% block body %}
<div id="startscreen">
  <div id="title"><img id="titleImg" src="{{asset('img/logopresage-yellow.png')}}"></div>
  <div id="triangle-down"></div>
  <div id="triangle-up"></div>
  <button id="button">⟷</button>
</div>

<div id="menuContent">
  <ul>
    <li><a href=".section1">Accueil</a></li>
    <li><a href=".section2">Ambition</a></li>
  </ul>
  <div id="menuClose">✕</div>
</div>

<content>
  <section class="section1">
           <img id="logo" src ="{{ asset('img/logopresage-yellow.png')}}">
   
    <div class="container">
   
    <div class="row active-with-click">
      {% for actu in actuAvant | slice(0,1) %}
        <div class="col-md-12 col-sm-6 col-xs-12">
        
            <article class="material-card Green">
                <h2>
                    <span>{{ actu.titre }}</span>
                    <strong>
                        <i class="fa fa-fw fa-star"></i>
                        {{ actu.date}}
                    </strong>
                </h2>
                <div class="mc-content">
                    <div class="img-container">
                        <img class="img-responsive" src="{{ asset('uploads/image/'~actu.image)}}">
                    </div>
                    <div class="mc-description">
                   {{ actu.contenu }}
                    </div>
                </div>
                <a class="mc-btn-action">
                    <i class="fa fa-plus"></i>
                </a>
                <div class="mc-footer">
                    <h4>
                        Partager
                    </h4>
                    <a class="fab fa-facebook-f"></a>
                    <a class="fab fa-twitter"></a>
                    <a class="fab fa-linkedin-in"></a>
                </div>
            </article>
        </div>     
      {% endfor %} 
        </div>
           
    </div>
    {# </div> #}
</div>
  </section>
  <section class="section2">
